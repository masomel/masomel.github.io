#!/bin/bash
if [ $# -ne 1 ] ; then
    echo "Usage: ./publish_homepage --page | --pubs | --pic | --tempsense"
    exit
fi

if [ $1 = "--page" ] ; then
    rsync -rz --progress ./*.php melara@tux.cs.princeton.edu:~/../htdocs/melara/
    rsync -rz --progress ./style.css melara@tux.cs.princeton.edu:~/../htdocs/melara/
elif [ $1 = "--pubs" ] ; then
    rsync -rz --progress ./pubs/*.pdf melara@tux.cs.princeton.edu:~/../htdocs/melara/pubs/
elif [ $1 = "--pic" ] ; then
    rsync -rz --progress ./marci.jpg melara@tux.cs.princeton.edu:~/../htdocs/melara/
elif [ $1 = "--tempsense" ] ; then
    rsync -rz --progress ./temp_sensing/* melara@tux.cs.princeton.edu:~/../htdocs/melara/temp_sensing/
    rsync -rz --progress ./temp_sensing/.htaccess melara@tux.cs.princeton.edu:~/../htdocs/melara/temp_sensing/
fi
    
